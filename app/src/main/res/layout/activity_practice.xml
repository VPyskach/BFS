<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.coursework.univer.bfs.PracticeActivity">

    <FrameLayout
        android:id="@+id/content2"
        android:layout_above="@id/layout_for_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/graph_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"

            android:orientation="vertical" />

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.coursework.univer.bfs.PaintingGraph"
            android:id="@+id/view" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_for_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:textColor="@color/text_color"
            android:layout_margin="3dp"
            android:text="Обхід графа" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_background"
            android:textColor="@color/text_color"
            android:layout_margin="3dp"
            android:text="Знайти відстань" />
    </LinearLayout>
</RelativeLayout>
